{
  "name": "TPIRC Code Sandbox",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "TZ": "${localEnv:TZ:America/Los_Angeles}",
      "CLAUDE_CODE_VERSION": "latest",
      "GIT_DELTA_VERSION": "0.18.2",
      "ZSH_IN_DOCKER_VERSION": "1.2.0"
    }
  },
  "features": {
    "ghcr.io/stardevs/dev-container-features/firewall:1": {
      "allowGitHub": true,
      "allowNpm": true,
      "allowPypi": true,
      "allowDocker": true,
      "allowGoogle": true,
      "allowAws": true,
      "allowedDomains": "api.anthropic.com,sentry.io,statsig.anthropic.com,statsig.com,marketplace.visualstudio.com,vscode.blob.core.windows.net,update.code.visualstudio.com,releases.hashicorp.com,checkpoint-api.hashicorp.com,get.helm.sh,dl.k8s.io,storage.googleapis.com",
      "enableOnStart": true,
      "remoteUser": "node",
      "fixWorkspacePermissions": true,
      "workspacePath": "/workspace"
    },
    "ghcr.io/stardevs/dev-container-features/golang-lint:1": {},
    "ghcr.io/stardevs/dev-container-features/terraform:1": {},
    "ghcr.io/stardevs/dev-container-features/helm:1": {},
    "ghcr.io/stardevs/dev-container-features/kubectl-kubectx-kubens:1": {},
    "ghcr.io/stardevs/dev-container-features/aws-cli:1": {},
    "ghcr.io/stardevs/dev-container-features/gcloud-cli:1": {},
    "ghcr.io/stardevs/dev-container-features/python-poetry-uv:1": {},
    "ghcr.io/stardevs/dev-container-features/redis-cli:1": {},
    "ghcr.io/stardevs/dev-container-features/psql:1": {},
    "ghcr.io/stardevs/dev-container-features/argo-cli:1": {},
    "ghcr.io/stardevs/dev-container-features/cilium-cli:1": {},
    "ghcr.io/stardevs/dev-container-features/istio-cli:1": {},
    "ghcr.io/stardevs/dev-container-features/wireguard:1": {},
    "ghcr.io/stardevs/dev-container-features/ebpf:1": {},
    "ghcr.io/stardevs/dev-container-features/proxy-dpi:1": {},
    "ghcr.io/stardevs/dev-container-features/wss:1": {}
  },
  "runArgs": ["--cap-add=NET_ADMIN", "--cap-add=NET_RAW"],
  "privileged": true,
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eamodio.gitlens"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        }
      }
    }
  },
  "remoteUser": "node",
  "mounts": [
    "source=tpirc-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=tpirc-config-${devcontainerId},target=/home/node/.claude,type=volume"
  ],
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace",
  "postStartCommand": "sudo /usr/local/bin/entrypoint.sh",
  "waitFor": "postStartCommand"
}
